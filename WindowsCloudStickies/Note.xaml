<Window x:Name="noteWindow" x:Class="WindowsCloudStickies.Note"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WindowsCloudStickies"
        mc:Ignorable="d"
        Title="Note" Height="300" Width="270" AllowsTransparency="True" WindowStyle="None" ResizeMode="CanResizeWithGrip">

    <Grid x:Name="noteBackground" Background="{StaticResource GreenNote}">
        <Border BorderBrush="Black" BorderThickness="1"/>
        <Grid x:Name="gripBar" Background="{StaticResource GreenTitle}" Height="14" VerticalAlignment="Top" PreviewMouseLeftButtonDown="gripBar_PreviewMouseLeftButtonDown">
            <Border BorderBrush="Black" BorderThickness="1" Height="14" VerticalAlignment="Top">
            </Border>
        </Grid>
        <!--<Image Source="/Images/close.png" Visibility="Visible" Width="8" Height="11" Margin="0,1,3,0" HorizontalAlignment="Right" VerticalAlignment="Top" Cursor="Hand" Stretch="UniformToFill"/>-->
        <!--<Button x:Name="btnClose" Content="X" FontSize="7"  Height="12" VerticalAlignment="Top" HorizontalAlignment="Right" Width="12" Click="btnClose_Click" Margin="0,1,1,0" BorderThickness="0,0,0,2" FontWeight="Bold"/>-->
    </Grid>
</Window>
