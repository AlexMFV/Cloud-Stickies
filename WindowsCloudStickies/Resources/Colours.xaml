<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:WindowsCloudStickies.Resources">

    <!--Main theme colours-->
    <SolidColorBrush x:Key="Dark">#FF242424</SolidColorBrush>
    <SolidColorBrush x:Key="Light">#FFEEEEEE</SolidColorBrush>

    <!--Note colours-->
    <SolidColorBrush x:Key="GreenNote">#99f0b2</SolidColorBrush>
    <SolidColorBrush x:Key="GreenTitle">#37b85c</SolidColorBrush>
    
    <SolidColorBrush x:Key="AquaNote">#99e0f0</SolidColorBrush>
    <SolidColorBrush x:Key="AquaTitle">#41a8bf</SolidColorBrush>

    <SolidColorBrush x:Key="PinkNote">#f0b0f7</SolidColorBrush>
    <SolidColorBrush x:Key="PinkTitle">#b44dbf</SolidColorBrush>
    
    <SolidColorBrush x:Key="OrangeNote">#f0ae8d</SolidColorBrush>
    <SolidColorBrush x:Key="OrangeTitle">#d9672e</SolidColorBrush>

    <SolidColorBrush x:Key="YellowNote">#fced95</SolidColorBrush>
    <SolidColorBrush x:Key="YellowTitle">#e6ce43</SolidColorBrush>

    <SolidColorBrush x:Key="ButtonSelected">#f0fbff</SolidColorBrush>
    <SolidColorBrush x:Key="ButtonUnselected">#00FFFFFF</SolidColorBrush>

</ResourceDictionary>